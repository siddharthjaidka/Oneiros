<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dip"
    android:layout_marginStart="15dip"
    app:cardCornerRadius="12dip"
    android:layout_marginEnd="15dip"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="4dip"
            android:src="@drawable/mojo_default"
            app:civ_border_color="#1e88e5"
            app:civ_border_width="2dp" />

        <TextView
            android:textColor="#e53935"
            android:layout_marginTop="5dip"
            android:gravity="center_horizontal"
            android:textSize="19sp"
            android:text="&quot;Art is not what you see, but what you make others see.- Edgar Degas\nScribbles, the Art club of Manipal University Jaipur came in to existence 2 years ago. Since then in all the fests conducted especially the cultural fest, we have a major role to play as we form the design team and every tiny bit of theme based recreation is done by us. Also a lot of interesting events are conducted every now and then and during the fest. Our club is dedicated towards all those who wish to unleash their talent or learn something new for which workshops will be conducted in the coming year."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="10dip"
            android:layout_marginEnd="15dip"
            android:layout_marginStart="15dip"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/black"/>
        <TextView
            android:textColor="@color/black"
            android:layout_marginStart="15dip"
            android:layout_marginTop="15dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: Everytime"/>
        <TextView
            android:textColor="@color/black"
            android:layout_marginBottom="9dip"
            android:layout_marginStart="17dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place: Everywhere"/>



    </LinearLayout>
</android.support.v7.widget.CardView>