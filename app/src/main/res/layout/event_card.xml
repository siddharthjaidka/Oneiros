<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dip"
    android:layout_marginStart="15dip"
    app:cardCornerRadius="12dip"
    android:layout_marginEnd="15dip"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="4dip"
            android:src="@drawable/mojo_default"
            app:civ_border_color="#1e88e5"
            app:civ_border_width="2dp" />

        <TextView
            android:textColor="#e53935"
            android:layout_marginTop="5dip"
            android:gravity="center_horizontal"
            android:textSize="19sp"
            android:text="Aashis Event Of Aashis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="10dip"
            android:layout_marginEnd="15dip"
            android:layout_marginStart="15dip"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/black"/>
        <TextView
            android:textColor="@color/black"
            android:layout_marginStart="15dip"
            android:layout_marginTop="15dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: Everytime"/>
        <TextView
            android:textColor="@color/black"
            android:layout_marginBottom="9dip"
            android:layout_marginStart="17dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place: Everywhere"/>



    </LinearLayout>
</android.support.v7.widget.CardView>