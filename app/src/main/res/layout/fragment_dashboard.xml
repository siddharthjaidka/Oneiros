<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar

        android:elevation="2dip"
        android:background="#F44d2a55"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_logo"/>

            <ImageButton
                android:clickable="true"
                android:id="@+id/camera_inflate"
                android:background="@null"
                android:layout_marginEnd="14dip"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera_fab"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dip"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/right_semi_circle"
                    android:paddingBottom="2dip"
                    android:paddingEnd="2dip"
                    android:paddingStart="5dip"
                    android:paddingTop="2dip"
                    android:text="Day One" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dip"
                    android:layout_marginStart="1dip"
                    android:background="@drawable/right_middle_semi_circle"
                    android:paddingBottom="2dip"
                    android:paddingEnd="5dip"
                    android:paddingStart="5dip"
                    android:paddingTop="2dip"
                    android:text="Day Two" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/right_left_semi_circle"
                    android:paddingBottom="2dip"
                    android:paddingEnd="5dip"
                    android:paddingStart="2dip"
                    android:paddingTop="2dip"
                    android:text="Day Three" />


            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="120dip"
                android:layout_height="120dip"
                android:layout_below="@+id/day"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/mojo_default"

                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circleImageView"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif-monospace"
                android:text="Mojo Hotie"
                android:textColor="#ffffff"
                android:textSize="29sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginEnd="29dp"
                android:layout_marginTop="5dip"
                android:background="@drawable/circle_selector"
                android:paddingBottom="2dip"
                android:paddingEnd="7dip"
                android:paddingStart="7dip"
                android:paddingTop="2dip"
                android:text="Siddhart Jaidka"
                android:textColor="#AA0000ff"
                android:textSize="17sp" />


            <View
                android:id="@+id/first_view"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_below="@+id/user"
                android:layout_marginEnd="12dip"
                android:layout_marginStart="12dip"
                android:layout_marginTop="45dip"
                android:background="#FFFFFF" />


            <LinearLayout
                android:id="@+id/kids"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_view"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="7dip"
                android:paddingEnd="15dip"
                android:paddingStart="7dip"
                android:paddingTop="7dip">

                <TextView
                    android:layout_marginTop="9dip"
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mojo Cookie of the Day"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dip"
                    android:background="@drawable/cloud"
                    android:gravity="center_horizontal"
                    android:paddingBottom="9dip"
                    android:paddingEnd="15dip"
                    android:paddingStart="25dip"
                    android:paddingTop="9dip"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>


            <View
                android:id="@+id/second_view"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_below="@+id/kids"
                android:layout_marginEnd="12dip"
                android:layout_marginStart="12dip"
                android:layout_marginTop="15dip"
                android:background="#FFFFFF" />


            <TextView
                android:id="@+id/registerd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second_view"
                android:layout_marginStart="20dip"
                android:layout_marginTop="44dip"
                android:text="Registered Events"
                android:textSize="19sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registerd"
                android:layout_marginBottom="40dip"
                android:layout_marginTop="15dip"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingEnd="14dip"
                android:paddingStart="14dip"
                android:weightSum="9">

                <android.support.v7.widget.CardView

                    android:id="@+id/adding_events"
                    android:layout_width="match_parent"
                    android:layout_height="170dip"
                    android:layout_weight="4.3"
                    app:cardCornerRadius="14dip"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    app:cardBackgroundColor="#3a1c30">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                       <ImageView
                           android:id="@+id/image"
                           android:layout_width="100dip"
                           android:src="@drawable/add_image"
                           android:layout_height="95dip"
                           android:layout_alignParentTop="true"
                           android:layout_centerHorizontal="true"
                           android:layout_marginTop="21dp" />

                        <TextView
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add More Events"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="14dip"
                    android:layout_width="match_parent"
                    android:layout_height="190dip"
                    android:layout_marginTop="15dip"
                    android:layout_weight="4.3"
                    app:cardBackgroundColor="@color/white" >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            app:cardCornerRadius="14dip"
                            android:foreground="?attr/selectableItemBackground"
                            android:id="@+id/circle"
                            android:layout_width="90dip"
                            android:layout_height="90dip"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="4dip"
                            android:src="@drawable/mojo_default"
                            app:civ_border_color="#1e88e5"
                            app:civ_border_width="2dp" />

                        <TextView
                            android:textColor="#e53935"
                            android:layout_marginTop="5dip"
                            android:gravity="center_horizontal"
                            android:textSize="17sp"
                            android:text="Aashis Event Of Aashis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_marginTop="1dip"
                            android:layout_marginEnd="15dip"
                            android:layout_marginStart="15dip"
                            android:layout_width="match_parent"
                            android:layout_height="2dip"
                            android:background="@color/black"/>

                      <LinearLayout
                          android:layout_marginTop="10dip"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center_horizontal">
                          <TextView
                              android:textColor="@color/black"
                              android:layout_marginStart="15dip"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Time: Everytime"/>
                          <TextView
                              android:textColor="@color/black"
                              android:layout_marginStart="17dip"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Place: Everywhere"/>

                      </LinearLayout>








                    </LinearLayout>
                    </android.support.v7.widget.CardView>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>



</LinearLayout>